# JURIS_IA_CORE_V1 - Environment Configuration Template
# ======================================================
# Copie este arquivo para .env e configure as vari√°veis

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL Connection
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=juris_ia
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# Database Pool Configuration
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Database Debug
DB_ECHO=false
DB_ECHO_POOL=false

# SSL (Production only)
DB_USE_SSL=false
DB_SSL_CERT_PATH=

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Security
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# AI/ML CONFIGURATION
# ============================================================================

# OpenAI (se usar GPT)
OPENAI_API_KEY=

# Model Configuration
DEFAULT_EXPLANATION_MODEL=local  # local, openai, anthropic
MAX_TOKENS=2048
TEMPERATURE=0.7

# ============================================================================
# LOGGING & MONITORING
# ============================================================================

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/juris_ia.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Sentry (Error Tracking)
SENTRY_DSN=

# Prometheus (Metrics)
PROMETHEUS_PORT=9090

# ============================================================================
# LGPD & DATA GOVERNANCE
# ============================================================================

# Data Retention
DATA_RETENTION_DAYS=1825  # 5 years
INACTIVE_USER_DAYS=180
ANONYMIZATION_GRACE_PERIOD_DAYS=90

# Backup
BACKUP_ENABLED=true
BACKUP_HOUR=3  # 3 AM
BACKUP_PATH=/backups/juris_ia

# ============================================================================
# FEATURE FLAGS
# ============================================================================

ENABLE_COGNITIVE_SNAPSHOTS=true
ENABLE_SPACED_REPETITION=true
ENABLE_ERROR_ANALYSIS=true
ENABLE_2FASE_PRACTICE=true

# ============================================================================
# INTEGRATIONS
# ============================================================================

# Email (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@juris-ia.com

# Redis (for caching, optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Development Tools
ENABLE_SWAGGER_DOCS=true
ENABLE_QUERY_LOGGING=false
ENABLE_PROFILING=false

# Testing
TEST_DB_NAME=juris_ia_test
